<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-info navbar-dark">
        <a class="navbar-brand" href="#">Admin</a>
        <div class="col-8">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/admin/home/index">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/admin/categories/index">Categories</a></li>
                <li class="nav-item"><a class="nav-link" href="/admin/brands/index">Brands</a></li>
                <li class="nav-item"><a class="nav-link" href="/admin/products/index">Products</a></li>
                <li class="nav-item"><a class="nav-link" href="/admin/users/index">Users</a></li>
                @if (User.Identity.IsAuthenticated == true)
                {
                    <li class="nav-item"><a class="nav-link" href="/account/logout">Logout</a></li>
                }
            </ul>
        </div>
        @if (User.Identity.IsAuthenticated == true)
        {
            <div class="text-black">
                Welcome :) @User.Identity.Name
            </div>
        }
    </nav>

    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
